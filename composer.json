{
    "name": "cagilo/cagilo",
    "description": "A set of open-source Blade components for the Laravel Framework",
    "keywords": [
        "blade-components",
        "laravel",
        "ui"
    ],
    "homepage": "https://cagilo.github.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandr Chernyaev",
            "email": "bliz48rus@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.76",
        "jenssegers/agent": "^2.6",
        "orchid/blade-icons": "1.3.2"
    },
    "conflict": {
        "jenssegers/agent": "<2.6.4",
        "orchestra/testbench-core": "<6.24.1",
        "mockery/mockery": "<1.4.2",
        "laravel/framework": "<8.76.0"     
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^4.8",
        "orchestra/testbench-core": "^6.2",
        "mockery/mockery": "^1.4.2"
    },
    "autoload": {
        "psr-4": {
            "Cagilo\\UI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cagilo\\UI\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
              "Cagilo\\UI\\CagiloServiceProvider"
            ]
        }
    }
}
